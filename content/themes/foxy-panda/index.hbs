{{!< default}}

<div id="masonry" class="l-4c">
    {{#foreach posts}}
        <div class="grid-sizer">&nbsp;</div>
        <a class="foxy-item item wide {{post_class}}" href="{{url}}" >
            <header class="post-header">
                <h2 class="post-title">{{title}}</h2>
            </header>
            <section class="post-excerpt">
                <p>{{excerpt words="26"}}
            </section>
            <footer class="post-meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}"
                                         nopin="nopin"/>{{/if}}
                <!--{{author}}-->
                <!--{{tags prefix=" on "}}-->
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
            </footer>
        </a><!-- .foxy-item -->
    {{/foreach}}
</div>
