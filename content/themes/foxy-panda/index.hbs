{{!< default}}


<div class="foxy-content-bar-block foxy-content-menu-button hidden">{{> button}}</div>
<div class="foxy-content-bar-block">
    <a href="#" class="foxy-grid-filter foxy-btn current" data-filter="*">All</a>
</div><!-- .foxy-grid-filter-wrapper -->
<div class="foxy-content-bar-block">
    <a href="#" class="foxy-grid-filter foxy-btn" data-filter=".tag-projects">Projects</a>
</div><!-- .foxy-grid-filter-wrapper -->
<div class="foxy-content-bar-block">
    <a href="#" class="foxy-grid-filter foxy-btn" data-filter=".tag-blog">Blog</a>
</div><!-- .foxy-grid-filter-wrapper -->
<div id="foxy-grid" class="foxy-grid">
    <div class="foxy-grid-sizer">&nbsp;</div>
    {{#foreach posts}}
        <div class="foxy-grid-item-wrapper {{post_class}}{{masonry (foxyExcerpt (content words="100"))}}">
            <div class="foxy-grid-item">
                <a class="foxy-grid-item-inside foxy-btn" href="{{url}}">
                    <h1 class="foxy-grid-item-title">{{title}}</h1>
                    <p class="foxy-grid-item-excerpt">
                        {{{foxyExcerpt (content words="100")}}}
                    </p>
                    <div class="foxy-grid-item-info">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                    </div><!-- .foxy-grid-item-info -->
                </a><!-- .foxy-grid-item-inside -->
            </div><!-- .foxy-grid-item -->
        </div><!-- .foxy-grid-item-wrapper -->
    {{/foreach}}
</div><!-- .foxy-grid -->
